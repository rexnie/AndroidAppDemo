<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_id_set_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Alarm" />

        <Button
            android:id="@+id/btn_id_send_intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Intent" />

        <Button
            android:id="@+id/btn_id_set_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Timer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_id_add_calendar_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Calendar Event" />

        <Button
            android:id="@+id/btn_id_rt_permissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo runtime permissions" />
    </LinearLayout>


</LinearLayout>
