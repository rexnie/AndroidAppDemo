<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_id_set_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Alarm" />

        <Button
            android:id="@+id/btn_id_send_intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Intent" />

        <Button
            android:id="@+id/btn_id_set_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Timer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_id_add_calendar_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AddCalendarEvent" />

        <Button
            android:id="@+id/btn_id_rt_permissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RuntimePermissions" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_aidl_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BindAidlService" />

        <Button
            android:id="@+id/btn_aidl_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnbindAidlService" />

        <Button
            android:id="@+id/btn_call_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_color_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/button_color_state"
            android:text="@string/color_state_list"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/layer_list"
            android:background="@color/colorDefault"/>

        <Button
            android:id="@+id/btn_state_list_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/state_list_drawable"/>
    </LinearLayout>

</LinearLayout>
